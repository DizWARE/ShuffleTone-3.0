<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content" android:background="@color/DarkerGrey" android:layout_width="fill_parent" android:id="@+id/rowLayout">
	<ToggleButton 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:id="@+id/btn_select" 
		android:layout_marginTop="15px"
		android:textOn = ""
		android:textOff = "" 
		android:background="@drawable/selectbox_unchecked"></ToggleButton>
	<TextView 
		android:layout_height="wrap_content" 
		android:id="@+id/tv_name" 
		android:text="TITLE" 
		android:textColor="@color/White" 
		android:layout_toRightOf="@+id/btn_select" 
		android:paddingLeft="10px" 
		android:paddingBottom="5px" android:textSize="14px" android:layout_width="fill_parent" android:shadowDx="3" android:shadowDy="3" android:shadowRadius=".4" android:shadowColor="@color/Black">
		</TextView>
	<Button 
		android:layout_below="@id/tv_name" 
		android:id="@+id/btn_play" 
		android:text="Play" 
		android:layout_height="40px" 
		android:layout_toRightOf="@+id/btn_select" android:layout_width="50px">
		</Button>


	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_marginTop="20px" android:text="5:00" android:textColor="@color/White" android:layout_marginRight="10px" android:paddingLeft="5px" android:id="@+id/tv_duration"></TextView><TextView 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_toRightOf="@+id/btn_play" 
		android:text="ARTIST" android:textSize="10px" android:id="@+id/tv_artist" android:layout_alignTop="@+id/btn_play" android:layout_toLeftOf="@id/tv_duration">
		</TextView>

<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tv_path" android:layout_toRightOf="@+id/btn_play" android:text="/sdcard/card" android:textSize="10px" android:layout_below="@+id/tv_artist"></TextView>

</RelativeLayout>
