<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  <ToggleButton 
  	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_margin = "5dip"
	android:layout_centerVertical = "true"
	android:background = "@drawable/selectbox_unchecked"		
	android:textOff = ""
	android:textOn = ""
	android:id = "@+id/tb_add_filter" />
  <TextView 
  	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginLeft = "5dip"	
	android:layout_marginRight = "10dip"
	android:layout_centerVertical = "true"
	android:textStyle = "bold"
	android:text = "Select All"
	android:textSize = "18dip"
	android:id = "@+id/tv_name"
	android:layout_toRightOf = "@id/tb_add_filter"/>
 <Button 
 	android:layout_width = "wrap_content"
 	android:layout_height = "wrap_content"
 	android:layout_alignParentRight = "true"
 	android:layout_centerVertical = "true"
 	android:background = "@drawable/play"
 	android:id = "@+id/btn_media"/>
 <TextView
 	android:layout_width = "wrap_content"
 	android:layout_height = "wrap_content"
 	android:layout_toLeftOf ="@id/btn_media" 
 	android:layout_toRightOf = "@id/tv_name"
 	android:gravity = "right"
 	android:layout_margin = "5dip"
	android:layout_centerVertical = "true"
	android:id = "@+id/tv_media"
 	android:ellipsize = "end"
 	android:marqueeRepeatLimit = "marquee_forever"
 	android:textStyle = "bold"
	android:text = "Select a Ringtone to play."
	android:textSize = "12dip"/>
 <ImageView
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:src="@drawable/seperator"
  	android:layout_below="@id/tv_media"
  	android:scaleType="fitXY"/>
</RelativeLayout>
