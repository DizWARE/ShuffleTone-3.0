<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  <TextView 
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:gravity = "center_horizontal|center_vertical"
  	android:layout_marginLeft ="3dip"
  	android:text = "How do you want to sort the list?"
  	android:id = "@+id/tv_title"
  	android:textSize = "18dip"
  	android:textColor = "@android:color/white"/>
  <Button 
  	android:layout_width="150dip"
  	android:layout_height="wrap_content"   	
  	android:layout_alignParentLeft = "true"
  	android:layout_marginTop = "7dip"
  	android:layout_below = "@id/tv_title"
  	android:text = "Artist"
    android:id = "@+id/btn_artist"/>
  <Button
  	android:layout_width="150dip"
  	android:layout_height="wrap_content"
  	android:layout_alignParentRight = "true"
  	android:layout_marginTop = "7dip"
  	android:layout_below = "@id/tv_title"
  	android:text = "Title"  
  	android:id = "@+id/btn_title" />
  <Button
  	android:layout_width="150dip"
  	android:layout_height="wrap_content"
  	android:layout_alignParentLeft = "true"
  	android:layout_below = "@id/btn_artist"
  	android:layout_marginTop = "3dip"
  	android:text = "Filepath"
  	android:id = "@+id/btn_filepath"/>
  <Button
  	android:layout_width="150dip"
  	android:layout_height="wrap_content"
  	android:layout_alignParentRight = "true"
  	android:layout_below = "@id/btn_title"
  	android:layout_marginTop = "3dip"
  	android:text = "Duration"  
  	android:id = "@+id/btn_duration" />
</RelativeLayout>
